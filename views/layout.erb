      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <meta property="og:title" content="<%= t.layout.title %>" />
    <meta property="og:description" content="<%= t.layout.description %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:image" content="<%= home_url %>/img/og.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@agesic" />
    <meta name="twitter:title" content="<%= t.layout.title %>" />
    <meta name="twitter:description" content="<%= t.layout.description %>" />
    <meta name="twitter:image"  content="<%= home_url %>/img/og.png" />

  </head>
  <body>
    <!--Main menu -->
    <div class="main_menu">
      <a id="ogp_logo" href="http://www.opengovpartnership.org/" target="_blank">Open Goverment Partnership</a>
      <nav id="main_nav">
        <ul>
          <ul>
            <li <%= "class=\"active\"" if '/' == request.path_info %>>
              <a href="/"><%= t.layout.home %></a>
            </li>
            <li <%= "class=\"active\"" if '/agenda' == request.path_info %>>
              <a href="/agenda"><%= t.agenda.title %></a>
            </li>
            <li <%= "class=\"active\"" if '/sedes' == request.path_info %>>
              <a href="/sedes"><%= t.hqs.title %></a>
            </li>
            <li <%= "class=\"active\"" if '/evento' == request.path_info %>>
              <a href="/evento"><%= t.event.title %></a>
            </li>
            <li <%= "class=\"active\"" if '/montevideo' == request.path_info %>>
              <a href="/montevideo"><%= t.montevideo.title %></a>
            </li>
            <li <%= "class=\"active\"" if '/contact' == request.path_info %>>
              <a href="/contact"><%= t.contact.title %></a>
            </li>
          </ul>
        </ul>
      </nav>

      <a href="/inscription" class="btn"><%= t.layout.register %></a>

      <div class="date_info">
        <h3><%= t.layout.date1 %>
          <br><%= t.layout.date2 %>
          <br><%= t.layout.date3 %>
          <br><%= t.layout.date4 %>
        </h3>
      </div>

      <nav class="language_nav">
        <%= language_buttons %>
      </nav>
    </div>
    <!--End main menu-->

    <%= yield %>

    <footer>
      <ul>
        <li>
          <i class="fa fa-globe"></i>
          <a href="http//agesic.gub.uy/gobiernodigital" target="_blank">
            agesic.gub.uy/gobiernodigital
          </a>
        </li>
        <li>
          <i class="fa fa-globe"></i>
          <a href="http://rga.uy" target="_blank">
            rga.uy
          </a>
        </li>
        <li>
          <i class="fa fa-facebook"></i>
          <a href="https://es-es.facebook.com/agesic.uy" target="_blank">
            /agesic.uy
          </a>
        </li>
        <li>
          <i class="fa fa-twitter"></i>
          <a href="http://www.twitter.com/agesic" target="_blank">
            @agesic
          </a>
        </li>
      </ul>
      <!--Start Twitter Feed-->
      <div class="twitter_feed">
        <h3><i class="fa fa-twitter"></i>Twitter Feed</h3>
        <a class="twitter-timeline"  href="https://twitter.com/hashtag/ogpmontevideo" data-widget-id="728694126754009089" data-chrome="noheader,nofooter,transparent,noborder">
          #ogpmontevideo Tweets
        </a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
    </footer>

