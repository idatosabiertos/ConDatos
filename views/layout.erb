    <meta property="og:title" content="<%= t.layout.title %>" />
    <meta property="og:description" content="<%= t.layout.description %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:image" content="<%= home_url %>/img/og.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@agesic" />
    <meta name="twitter:title" content="<%= t.layout.title %>" />
    <meta name="twitter:description" content="<%= t.layout.description %>" />
    <meta name="twitter:image"  content="<%= home_url %>/img/og.png" />

    <script src='/js/jquery.min.js'></script>

  </head>
  <body>
    <!--Main menu -->
    <div class="main_menu" id="main_menu">
      <a id="ogp_logo" href="https://condatos.org/">ConDatos/AbreLatam</a>
      <nav id="main_nav">
        <ul>
          <ul>
            <li <%= "class=\"active\"" if '/' == request.path_info %>>
              <a href="/"><%= t.layout.home %></a>
            </li>
            <li <%= "class=\"active\"" if '/sedes' == request.path_info %>>
              <a href="/sedes"><%= t.hqs.title %></a>
            </li>
            <li <%= "class=\"active\"" if '/evento' == request.path_info %>>
              <a href="/evento"><%= t.event.title %></a>
            </li>
            <li>
              <a href="http://abrelatam.org">AbreLatam</a>
            </li>
            <li <%= "class=\"active\"" if '/montevideo' == request.path_info %>>
              <a href="/ciudad"><%= t.montevideo.title %></a>
            </li>
            <li <%= "class=\"active\"" if '/contact' == request.path_info %>>
              <a href="/contact"><%= t.contact.title %></a>
            </li>
          </ul>
        </ul>
      </nav>

      <a href="/inscription" class="btn"><%= t.layout.register %></a>

      <div class="date_info">
        <h3>
          <span><i class="fa fa-calendar" aria-hidden="true"></i>  <%= t.layout.date1 %></span>
          <br><span> <%= t.layout.date2 %></span><br>
          <br><span><i class="fa fa-map-marker" aria-hidden="true"></i>  <%= t.layout.date3 %></span>
        </h3>
      </div>

      <a href="/doc/InteresPublicoAbreLatamConDatos.pdf" class="public-interest"><%= t.layout.publicInterest %></a>
    </div>
    <!--End main menu-->
    <a id="ogp_logo_mobile" href="https://condatos.org/">ConDatos/AbreLatam</a>
    <a href="#" id="menu_mobile_open">Menu</a>
    <%= yield %>


    <footer>
      <ul>
        <li>
          <i class="fa fa-facebook"></i>
          <a href="https://www.facebook.com/ConDatos/" target="_blank">
            /ConDatos
          </a>
        </li>
        <li>
          <i class="fa fa-twitter"></i>
          <a href="http://www.twitter.com/ConDatosLATAM" target="_blank">
            @ConDatosLATAM
          </a>
        </li>
      </ul>
      <!--Start Twitter Feed-->
      <div class="twitter_feed">
        <h3>
          <i class="fa fa-twitter"></i>
          Twitter <a href="https://twitter.com/hashtag/ConDatos2017" target="_blank">#ConDatos2017</a>
        </h3>             
         <a class="twitter-timeline"  href="https://twitter.com/hashtag/ConDatos2017" data-widget-id="855587020072157188">Tweets sobre #ConDatos2017</a>
