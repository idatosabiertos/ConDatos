<% if inscription.errors && !inscription.errors.empty? %>
  <section id="errors" class="container content-section">
    <div class="alert alert-danger" role="alert">
      <h2><%= t.index.errors %></h2>
      <ul>
        <% inscription.errors.each do |e,v| %>
          <li><%= eval('t.inscription.' + e.to_s) %> - <%= eval('t.inscription.' + v[0].to_s) %></li>
        <% end %>
      </ul>
    </div>
  </section>
<% end %>
  <section id="form" class="main_container">
    <!--p><%= t.form.closed %></p-->
  <div class="triangle-topright"></div>
  <div class="triangle-topleft" style="left:-120px;top:500px"></div>

  <div class="cilinder"></div>
  <div class="lines"></div>
  <div class="triangle-topleft"></div>

  <form action='/enviar' method='post' name='form' id="form">
    <div class="block">
      <h3><%= t.form.data %></h3>
      <div class="row">
        <div class="col-md-6">
          <div class="input-container">
            <input type='text' name='name' id='name' value="<%= inscription.name %>" required>
            <label for="name"><%= t.form.name %>*</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <input type='text' name='organization' id='organization' value="<%= inscription.organization %>" required>
            <label for="organization"><%= t.form.organization %>*</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <input type='email' name='email' id='email' value="<%= inscription.email %>" required>
            <label for="email"><%= t.form.email %>*</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <select name='sector' id='sector'>
              <option><%= t.form.sector %>*</option>
              <option>--------</option>
              <% FormData.sectors.each do |sector| %>
                <% sector = eval('t.form.' + sector.to_s) %>
                <option value='<%= sector %>'
                        <% if inscription.sector == sector %>
                        selected="selected"
                        <% end %>
                >
                  <%= sector %>
                </option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <select name='country' id='country'>
              <option><%= t.form.country %>*</option>
              <option>--------</option>
              <% FormData.countries.each do |country| %>
                <option value='<%= country %>' name='country'
                        <% if country == inscription.country %>
                        selected="selected"
                        <% end %>
                >
                  <%= country %>
                </option>
              <% end %>
            </select>
          </div>
        </div>
        <small><%= t.form.mandatory %></small>
      </div>
    </div>

    <div class="block">
      <h3><%= t.form.unconference %></h3>
      <div class="form-group">

        <p><%= t.form.unconference_info %></p>

        <label class="checkbox_label" for="unconference">
          <%= t.form.join_unconference %>
        </label>
        <input type="checkbox" id="unconference" name="unconference" class="check">
        <section class="checkbox">
          <span class="highlight"></span>
        </section>

        <small><%= t.form.unconference_limit %></small>
      </div>
    </div>

    <div class="block">
      <div class="form-group">
        <h3><%= t.form.encounter_third_kind %></h3>
        <p><%= t.form.encounter_third_kind_info %></p>

        <label class="checkbox_label" for="regional">
          <%= t.form.join_encounter %>
        </label>
        <input type="checkbox" class="check" name="regional" id="regional">
        <section class="checkbox">
          <span class="highlight"></span>
        </section>
      </div>
    </div>

    <div class="form-group">
      <h3><%= t.new_form.visa %></h3>
      <p><%= t.new_form.visa_content %></p>

      <label class="checkbox_label" for="visa">
        <%= t.new_form.visa_help %>
      </label>
      <input type="checkbox" class="check" name="visa" id="visa">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>
    </div>

    <div class="form-group">
      <h3><%= t.new_form.food%></h3>
      <p><%= t.new_form.food_content %></p>

      <label class="checkbox_label" for="vegan">
        <%= t.new_form.food_heroes %>
      </label>
      <input type="checkbox" class="check" value="vegan" name="food[]" id="vegan">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>

      <label class="checkbox_label" for="celiac">
        <%= t.new_form.food_celiac %>
      </label>
      <input type="checkbox" class="check" value="celiac" name="food[]" id="celiac">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>

      <label class="checkbox_label" for="diabetic">
        <%= t.new_form.food_diabetic %>
      </label>
      <input type="checkbox" class="check" value="diabetic" name="food[]" id="diabetic">
      <section class="checkbox">
        <span class="highlight"></span>
      </section
    </div>

    <div class="form-group">

      <h3><%= t.new_form.accessibility %></h3>
      <p><%= t.new_form.accessibility_content %></p>

      <label class="checkbox_label" for="reduced_movility">
        <%= t.new_form.accessibility_movility %>
      </label>
      <input type="checkbox" class="check" value="reduced_movility" name="accessibility[]" id="reduced_movility">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>

      <label class="checkbox_label" for="sign_language">
        <%= t.new_form.accessibility_sign %>
      </label>
      <input type="checkbox" class="check" value="sign_language" name="accessibility[]" id="sign_language">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>

    </div>

    <div class="form-group">
      <h3><%= t.new_form.language %></h3>
      <p><%= t.new_form.language_content %></p>

      <label class="checkbox_label" for="spanish">
        <%= t.new_form.spaniolo %>
      </label>
      <input type="checkbox" class="check" name="languages[]" value="spanish" id="spanish">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>

      <label class="checkbox_label" for="english">
        <%= t.new_form.english %>
      </label>
      <input type="checkbox" class="check" name="languages[]" value="english" id="english">
      <section class="checkbox">
        <span class="highlight"></span>
      </section>
    </div>
    </div>

    <div class="block">
      <div class="form-group">
        <h3><%= t.form.termos %></h3>
        <p><%= t.form.termos_content %></p>
        <label class="checkbox_label" for="email_organization">
          <%= t.form.email_organization %>
        </label>
        <input type='checkbox' value='email_organization' name='email_organization' id='email_organization' class="check">
        <section class="checkbox">
          <span class="highlight"></span>
        </section>

        <label class="checkbox_label" for='register_image'><%= t.form.register_image %></label>
        <input type='checkbox' value='register_image' name='register_image' id='register_image' class="check">
        <section class="checkbox">
          <span class="highlight"></span>
        </section>
        <small><%= t.form.mandatory %></small>
        <small><%= t.new_form.accessibility_disclaimer %></small>
        <small><%= t.form.shy %></small>
        <button type="submit" class="btn"><%= t.form.finish_her %></button>
      </div>
    </div>
  </form>
  <script src='/js/validate.min.js'></script>
  <script src='/js/smoothscroll.min.js'></script>
  <script src='/js/form.js'></script>
</section>
