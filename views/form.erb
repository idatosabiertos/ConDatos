<% if inscription.errors && !inscription.errors.empty? %>
  <section id="errors" class="container content-section">
    <div class="alert alert-danger" role="alert">
      <h2><%= t.index.errors %></h2>
      <ul>
        <% inscription.errors.each do |e,v| %>
          <li><%= eval('t.inscription.' + e.to_s) %> - <%= eval('t.inscription.' + v[0].to_s) %></li>
        <% end %>
      </ul>
    </div>
  </section>
<% end %>
  <section class="main_container">
    <!--p><%= t.form.closed %></p-->
  <div class="triangle-topright"></div>
  <div class="triangle-topleft" style="left:-120px;top:500px"></div>

  <div class="cilinder"></div>
  <div class="lines"></div>
  <div class="triangle-topleft"></div>

  <div class="inscription">
    <h1><%= t.form.inscription %></h1>
    <p><%= t.form.process_title %></p>
    <p><%= t.form.process %></p>
    <p><%= t.form.process_dates %></p>
  </div>

  <form action='/enviar' method='post' name='form' id="form">
   
    <div class="block">
      <h3><%= t.form.data %></h3>
      <div class="row">
        <div class="col-md-6">
          <div class="input-container">
            <input type='text' name='name' id='name' required>
            <label for="name"><%= t.form.name %>*</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <input type='text' name='surname' id='surname' required>
            <label for="surname"><%= t.form.surname %>*</label>
          </div>
        </div>

        <div class="col-md-6">
          <label class="lbl" for="gender_radio"><%= t.form.gender %>*</label>
           <div id="gender_radio">
            <label class="radio-inline"><input type="radio" name="gender" value="<%= t.form.gender_male %>" ><%= t.form.gender_male %></label>
            <label class="radio-inline"><input type="radio" name="gender" value="<%= t.form.gender_female %>" ><%= t.form.gender_female %></label>
            <label class="radio-inline"><input type="radio" name="gender" value="<%= t.form.gender_other %>" ><%= t.form.gender_other %></label>
            <label class="radio-inline"><input type="radio" name="gender"value="<%= t.form.gender_none %>" checked><%= t.form.gender_none %></label>
           </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <input type='email' name='email' id='email' required>
            <label for="email"><%= t.form.email %>*</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <select name='country_origin' id='country_origin' required>
              <option value=""><%= t.form.country_origin %>*</option>
              <option value="">--------</option>
              <% FormData.countries.each do |country| %>
                <option value='<%= country %>' name='country_origin'
                        <% if country == inscription.country_origin %>
                        selected="selected"
                        <% end %>
                >
                  <%= country %>
                </option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="col-md-6">
          <div class="input-container">
            <select name='country_residence' id='country_residence' required>
              <option value=""><%= t.form.country_residence %>*</option>
              <option value="">--------</option>
              <% FormData.countries.each do |country| %>
                <option value='<%= country %>' name='country_residence'
                        <% if country == inscription.country_residence %>
                        selected="selected"
                        <% end %>
                >
                  <%= country %>
                </option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="col-md-6">
            <div class="textarea-container">
              <textarea placeholder="<%= t.form.job %>*" name="job" id="job" required></textarea>
            </div>
        </div>

        <div class="col-md-6">
          <div class="textarea-container">
            <textarea placeholder="<%= t.form.open_data_usage %>*" name="open_data_usage" id="open_data_usage" maxlength="250" required></textarea>
          </div>  
          <small><%= t.form.open_data_usage_tooltip %></small>
        </div>


        <div class="col-md-6">
          <label class="lbl" for="particpated_before"><%= t.form.particpated_before %></label>
           <div id="particpated_before">
            <label class="radio-inline"><input type="radio" name="particpated_before"><%= t.form.yep %></label>
            <label class="radio-inline"><input type="radio" name="particpated_before" checked><%= t.form.nop %></label>
           </div>
        </div> 

        <div class="col-md-6">
          <label class="lbl" for="scholarship_before"><%= t.form.scholarship_before %></label>
           <div id="scholarship_before">
            <label class="radio-inline"><input type="radio" name="scholarship_before"><%= t.form.yep %></label>
            <label class="radio-inline"><input type="radio" name="scholarship_before" checked><%= t.form.nop %></label>
           </div>
          <div id="scholarship_more_than_once_group">
            <label class="lbl" for="scholarship_more_than_once"><%= t.form.scholarship_more_than_once %></label>
             <div id="scholarship_more_than_once">
              <label class="radio-inline"><input type="radio" name="scholarship_more_than_once" ><%= t.form.yep %></label>
              <label class="radio-inline"><input type="radio" name="scholarship_more_than_once" checked><%= t.form.nop %></label>
             </div>
          </div>
        </div>

        <div class="col-md-6">
          <label class="lbl" for="parcipate_in"><%= t.form.parcipate_in %>:*</label>
           <div id="parcipate_in">
             <div class="checkbox">
                <label><input type="checkbox" name="event[]" class="require-one" value="<%= t.form.unconference %>"><%= t.form.unconference %></label>
              </div>
              <div class="checkbox">
               <label><input type="checkbox" name="event[]" class="require-one" value="<%= t.form.encounter_third_kind %>"><%= t.form.encounter_third_kind %></label>
              </div>
           </div>
          <p id="parcipate_in_error" class="error"><%= t.form.require_one %></p>
        </div>

        <div class="col-md-6">
          <label class="lbl" for="financial_support"><%= t.form.financial_support %>:</label>
           <div id="financial_support">
             <div class="checkbox">
                <label><input type="checkbox" name="financial_support[]" value="<%= t.form.plain_ticket %>"><%= t.form.plain_ticket %></label>
              </div>
              <div class="checkbox">
               <label><input type="checkbox" name="financial_support[]" value="<%= t.form.lodgment %>"><%= t.form.lodgment %></label>
              </div>
           </div>
          <small style="margin-bottom: 15px;"><%= t.form.financial_support_note %></small>
        </div>

        <div class="col-md-6">
          <label class="lbl" for="participates_in_representation"><%= t.form.participates_in_representation %></label>
           <div id="participates_in_representation">
            <label class="radio-inline"><input type="radio" id="participates" name="participates_in_representation"><%= t.form.yep %></label>
            <label class="radio-inline"><input type="radio" id="noparticipates" name="participates_in_representation" checked><%= t.form.nop %></label>
           </div>
        </div>

      </div>
    </div>


    <div class="block" id="organization_tab">
      <h3><%= t.form.organization %></h3>

      <div class="row">

        <div class="col-md-6">
            <div class="input-container">
              <input type='text' name='organization' id='organization'>
              <label for="organization"><%= t.form.name %>*</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-container">
              <select name='organization_type' id='organization_type'>
                <option value=""><%= t.form.organization_type %>*</option>
                <option value="">--------</option>
                <% FormData.sectors.each do |sector| %>
                  <% sector = eval('t.form.' + sector.to_s) %>
                  <option value='<%= sector %>'
                          <% if inscription.organization_type == sector %>
                          selected="selected"
                          <% end %>
                  >
                    <%= sector %>
                  </option>
                <% end %>
              </select>
            </div>
        </div>
        <div class="col-md-6">
          <div class="textarea-container">
            <textarea placeholder="<%= t.form.organization_role %>*" name="organization_role" id="organization_role"></textarea>
          </div>      
        </div>
        <div class="col-md-6">
            <div class="input-container">
              <input type='url' name='website' id='website'>
              <label for="website"><%= t.form.website %></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-container">
              <input type='text' name='facebook' id='facebook'>
              <label for="facebook"><%= t.form.facebook %></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-container">
              <input type='text' name='twitter' id='twitter'>
              <label for="twitter"><%= t.form.twitter %></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-container">
              <input type='text' name='instagram' id='instagram'>
              <label for="instagram"><%= t.form.instagram %></label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-container">
              <input type='url' name='github' id='github'>
              <label for="github"><%= t.form.github %></label>
            </div>
        </div>
      </div>    

    </div>


    <div class="block">
      <h3><%= t.event.title %></h3>
      <div class="row"> 
          
        <div class="col-md-12">
          <label class="lbl" for="thematic"><%= t.form.thematic %>:*</label>
           <div id="thematic">
             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_1 %>"><%= t.form.thematic_1 %></label>
              </div>
              <div class="checkbox">
               <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_2 %>"><%= t.form.thematic_2 %></label>
              </div>
             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_3 %>"><%= t.form.thematic_3 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_4 %>"><%= t.form.thematic_4 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_5 %>"><%= t.form.thematic_5 %></label>
