             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_6 %>"><%= t.form.thematic_6 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_7 %>"><%= t.form.thematic_7 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_8 %>"><%= t.form.thematic_8 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_9 %>"><%= t.form.thematic_9 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_10 %>"><%= t.form.thematic_10 %></label>
              </div>
             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_11 %>"><%= t.form.thematic_11 %></label>
              </div>

             <div class="checkbox">
                <label><input type="checkbox" class="require-three" name="thematic[]" value="<%= t.form.thematic_12 %>"><%= t.form.thematic_12 %></label>
              </div>
           </div>
          <p id="thematic_error" class="error"><%= t.form.require_three %></p>
        </div>

        <div class="col-md-12">
          <div class="textarea-container">
            <textarea placeholder="<%= t.form.open_data_problem %>*" name="open_data_problem" id="open_data_problem" required maxlength="140"></textarea>
          </div>      
        </div>

      </div>
    </div>

    <div class="block">
      <h3><%= t.form.proposals_volunteering %></h3>
      <div class="row col-md-12">
        <label class="checkbox_label lbl" for="participate_as_colaborator">
          <%= t.form.participate_as_colaborator %>
        </label>
        <input type='checkbox' name='participate_as_colaborator' id='participate_as_colaborator' class="check">
        <section class="checkbox">
          <span class="highlight"></span>
        </section>
      </div>
      <div id="colaborator_group" class="row">
          <div class="col-md-6">
            <label class="lbl" for="colaborator_area"><%= t.form.colaborator_area %>*</label>
             <div id="colaborator_area">
               <div class="checkbox">
                  <label><input type="checkbox" class="require-one" name="colaborator_area[]" value="<%= t.form.colaborator_area_1 %>"><%= t.form.colaborator_area_1 %></label>
                </div>
                <div class="checkbox">
                 <label><input type="checkbox" class="require-one" name="colaborator_area[]" value="<%= t.form.colaborator_area_2 %>"><%= t.form.colaborator_area_2 %></label>
                </div>
               <div class="checkbox">
                  <label><input type="checkbox" class="require-one" name="colaborator_area[]" value="<%= t.form.colaborator_area_3 %>"><%= t.form.colaborator_area_3 %></label>
                </div>
               <div class="checkbox">
                  <label><input type="checkbox" class="require-one" name="colaborator_area[]" value="<%= t.form.colaborator_area_4 %>"><%= t.form.colaborator_area_4 %></label>
                </div>
               <div class="checkbox">
                  <label><input type="checkbox" class="require-one" name="colaborator_area[]" value="<%= t.form.colaborator_area_5 %>"><%= t.form.colaborator_area_5 %></label>
                </div>
             </div>
             <p id="colaborator_group_error" class="error"><%= t.form.require_one %></p>
          </div>
      </div>
      <div class="row col-md-12">
        <label class="checkbox_label lbl" for="has_proposition">
          <%= t.form.has_proposition %>
        </label>
        <input type='checkbox' name='has_proposition' id='has_proposition' class="check">
        <section class="checkbox">
          <span class="highlight"></span>
        </section>
      </div> 
      <div class="row" id="proposition_group">
        <div class="col-md-6">
            <div class="input-container">
              <input type='text' id='proposition_title' name="proposition_title">
              <label for="proposition_title"><%= t.form.title %>*</label>
            </div>
        </div>
        <div class="col-md-6">
          <div class="textarea-container">
            <textarea placeholder="<%= t.form.summary %>*" name="proposition_summary" id="proposition_summary"></textarea>
          </div>
        </div>
        <div class="col-md-6">
          <div class="textarea-container">
            <textarea placeholder="<%= t.form.why_include %>*" name="proposition_why_include" id="proposition_why_include"></textarea>
          </div>
        </div>
        <div class="col-md-6">
          <div class="textarea-container">
            <textarea placeholder="<%= t.form.others_needed %>" name="proposition_others_needed" id="proposition_others_needed"></textarea>
          </div>
          <small style="margin-bottom: 15px;"><%= t.form.others_needed_tooltip %></small>
        </div>     
      </div> 
    </div>

    <div class="block">
      <h3><%= t.form.disclaimer_title %></h4>
      <p><%= t.form.disclaimer %></p>
    </div>

    <small style="float:right !important; text-align:right !important;"><%= t.form.mandatory %></small>
    <button type="submit" class="btn pull-right"><%= t.form.finish_her %></button>

  </form>
  <script src='/js/form.js'></script>
  <script src='/js/smoothscroll.min.js'></script>
</section>
